
<div class="row">
    <div class="col-5 text-right">
        {{#each burger}}
            {{#unless devoured}}
                <p>{{burger_name}} <button type="submit" class="btn btn-primary ml-2 move-button" data-value={{id}}>Devour It</button></p>
            {{/unless}}
        {{/each}}
    </div>
    <div class="col-2"></div>
    <div class="col-5 text-left">
        {{#each burger}}
            {{#if devoured}}
                <p>{{burger_name}}</p>
            {{/if}}
        {{/each}}
    </div>
</div>
<div class="row text-center">
    <div class="col-6 offset-3">
        <form id="add-burger">
            <label for="burger-input">Type your burger here:</label><br>
            <input type="text" id="burger-input" />
            <br />
            <button type="submit" class="btn btn-primary mt-1" id="burger-submit-btn" value="Submit">
                Submit
            </button>
        </form>
    </div>
</div>

